<% layout("../layouts/boilerplate") %>
<div class="row mt-3 mb-3">
    <div class="col-6 offset-3">
        <h3 class="mb-3 mt-3">Login to WanderLust</h3>
        <form action="/login" class="needs-validation" novalidate method="post">
            <div class="mb-3 mt-3">
                <input type="text" name="username" class="form-control" id="" required placeholder="Enter Your Username" >
                <div class="invalid-feedback">Invalid Username</div>
            </div>
            <div class="mb-3 mt-3">
                <input type="password" name="password" class="form-control" id="" required placeholder="Enter Your Password" >
                <div class="invalid-feedback">Incorrect Password</div>
            </div>
            
            <button type="submit" class="btn form-btn btn-dark me-3 mb-3 mt-3">Login</button>
            <a href="/signup" class="btn btn-dark">SignUp</a>
        </form>
    </div>
</div>