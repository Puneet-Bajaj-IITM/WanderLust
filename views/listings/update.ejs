<% layout("../layouts/boilerplate") %>

<body>
    <form method="post" class="needs-validation" enctype="multipart/form-data" novalidate action="/listings/<%= data._id %>?_method=PUT">
        <div class="row form-style offset-1">
            <div class="col-10 mb-3"><br>
                <label for="title" class="form-label">Title : </label>
                <input type="text" value="<%= data.title %>" name="title" class="form-control" id="" required><br>
                <div class="invalid-feedback">Enter a valid Title</div>
            </div>
            <div class="col-10 mb-3">
                <label for="description" class="form-label">Description : </label>
                <textarea name="description" id="" cols="30" class="form-control" rows="5" required><%= data.description %> </textarea><br>
                <div class="invalid-feedback">Enter a valid Description</div>
            </div>
            <div class=" mb-3">
                <img class="col-3" src="<%= previewUrl%>" alt="">
            </div>
            <div class="col-10 mb-3">
                <label for="image"  class="form-label">Upload Image : </label>
                <input type="file" class="form-control"  name="image"  id=""><br>
                <div class="invalid-feedback">Please Upload an Image</div>
            </div>
            <div class="col-10 mb-3">
                <label for="location" class="form-label">Location : </label>
                <input type="text" value="<%= data.location %>" class="form-control" required  name="location" id="">
                <div class="invalid-feedback">Enter a Valid Location</div>
            </div>
            <div class="row mt-3">
                <div class="col-4 mb-3">
                    <label for="price" class="form-label">Price : </label>
                    <input type="number" value="<%= data.price %>" required  class="form-control" name="price" id="">
                    <div class="invalid-feedback">Enter a valid Country</div>
                </div>
                <div class="col-6 mb-3">
                    <label for="country" class="form-label">Country : </label>
                    <input type="text" value="<%= data.country %>" required class="form-control" name="country" id=""><br>
                    <div class="invalid-feedback">Enter a valid Price</div>
                </div>
            </div>
            <div class="col-6 mb-3 mt-3">
                <button class="btn btn-dark mb-3">Update Listing</button><br>
            </div><br><br>
        </div>
    </form>
</body>
