<% layout("../layouts/boilerplate") %>

<body>
    <h3 class="mt-3">All Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-xsm-2">
        <%for (listing of data){ %>
            <a href="/listings/<%= listing._id %>" >
                <div class="card ind-card mb-3 col" >
                    <img src="<%= listing.image %>" class="card-img-top"style="height: 18rem; " alt="Listing_image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <h5 class="card-title"><b><%= listing.title %></b></h5>
                        <p class="card-text"><span>Price: &#8377; <%= listing.price.toLocaleString("en-IN") %> /night</span></p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
